<%- include('templates/header', {
title: 'Members Area',
loggedIn: true,
name: name
}) %>

<div class="container">
    <h1 class="mt-5">Hello, <%= name %>!</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        <% images.forEach(img => { %>
            <div class="col">
                <div class="card h-100">
                    <img src="<%= img %>"
                         class="card-img-top"
                         alt="Member Image">
                </div>
            </div>
        <% }) %>
    </div>
    <a href="/logout" class="btn btn-secondary mt-4">Log Out</a>
</div>

<%- include('templates/footer') %>
